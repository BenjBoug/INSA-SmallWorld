<Window x:Class="InterfaceGraphique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmallWorld" Loaded="Window_Loaded"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <Menu IsMainMenu="False" Height="25">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF6F6F6" Offset="0.25"/>
                    <GradientStop Color="#FFEAE8E8"/>
                    <GradientStop Color="#FFDCD9D9" Offset="0.8"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Nouveau">
                    <MenuItem Header="_Partie local..." Click="MenuItem_Click"/>
                    <MenuItem Header="_Partie en ligne..." IsEnabled="False"/>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Ouvrir..." Click="MenuItem_Click_2" />
                <Separator />
                <MenuItem Header="_Sauvegarder" Click="MenuItem_Click_1" />
                <MenuItem Header="_Sauvegarder sous..." Click="MenuItem_Click_3" />
                <Separator />
                <MenuItem Header="_Quitter" />
            </MenuItem>
            <MenuItem Header="_Options">
                <MenuItem Name="affTileCheckbox" Header="Afficher tiles" Click="affTileCheckbox_Click">
                    <MenuItem Name="default" Header="Style par défaut" Click="default_Click"/>
                    <MenuItem Name="groovy" Header="Style Groovy" Click="groovy_Click"/>
                    <MenuItem Name="tropical" Header="Style Tropical" Click="tropical_Click"/>
                    <MenuItem Name="campaign" Header="Style Campagne" Click="campaign_Click"/>
                    <MenuItem Name="noStyle" Header="Pas de style" Click="noStyle_Click"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <StackPanel x:Name="controlGauche" Width="220" Height="550">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFC5C5C5" Offset="0"/>
                        <GradientStop Color="#FF4B4B4B" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <Label Name="labelJoueurActuel" Content="C'est à ... de jouer !"/>
                <Label Name="labelNbTour" Content="Tour : x/xx"/>
                <StackPanel Name="panelListeJoueur"/>
                <Button Name="boutonFinir" Content="Finir Tour !" Click="Button_Click"/>
            </StackPanel>
            <ScrollViewer Width="550" Height="550" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="canvasMap" VerticalAlignment="Center" HorizontalAlignment="Center">
                </Canvas>
            </ScrollViewer>
            <StackPanel x:Name="controlDroit" Width="220" Height="550">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFC5C5C5" Offset="0"/>
                        <GradientStop Color="#FF4B4B4B" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
