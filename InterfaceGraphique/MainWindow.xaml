<Window x:Class="InterfaceGraphique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="700" Loaded="Window_Loaded" MouseDown="Window_MouseDown">
    <DockPanel>
        <ScrollViewer Height="450" DockPanel.Dock="Top" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MouseDown="ScrollViewer_MouseDown">
        <Grid x:Name="gridMap" VerticalAlignment="Center" HorizontalAlignment="Center" Width="650" Height="450">
        </Grid>
        </ScrollViewer>
        <DockPanel x:Name="dockBas" DockPanel.Dock="Bottom">
            <DockPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC5C5C5" Offset="0"/>
                    <GradientStop Color="#FF4B4B4B" Offset="1"/>
                </LinearGradientBrush>
            </DockPanel.Background>
        </DockPanel>
    </DockPanel>
</Window>
