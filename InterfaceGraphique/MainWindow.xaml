<Window x:Class="InterfaceGraphique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Loaded="Window_Loaded" MouseDown="Window_MouseDown"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Vertical">
        <Menu IsMainMenu="False" Height="25">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF6F6F6" Offset="0.25"/>
                    <GradientStop Color="#FFEAE8E8"/>
                    <GradientStop Color="#FFDCD9D9" Offset="0.8"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Nouveau">
                    <MenuItem Header="_Partie 1vs1..." Click="MenuItem_Click"/>
                    <MenuItem Header="_Partie 1vsCOM..." IsEnabled="False"/>
                    <MenuItem Header="_Partie en ligne..." IsEnabled="False"/>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Ouvrir..." />
                <Separator />
                <MenuItem Header="_Sauvegarder" />
                <MenuItem Header="_Sauvegarder sous..." />
                <Separator />
                <MenuItem Header="_Quitter" />
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <DockPanel x:Name="dockBas" Width="300" Height="550">
                <DockPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFC5C5C5" Offset="0"/>
                        <GradientStop Color="#FF4B4B4B" Offset="1"/>
                    </LinearGradientBrush>
                </DockPanel.Background>
                <Button Content="Button demo" Height="550" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
                <Button Content="Button petite" Height="550" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
                <Button Content="Button normale" Height="550" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            </DockPanel>
            <ScrollViewer Width="550" Height="550" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MouseDown="ScrollViewer_MouseDown">
                <Grid x:Name="gridMap" VerticalAlignment="Center" HorizontalAlignment="Center">
                </Grid>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</Window>
