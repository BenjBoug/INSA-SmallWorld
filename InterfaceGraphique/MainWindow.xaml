<Window x:Class="InterfaceGraphique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmallWorld" Loaded="Window_Loaded"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Rectangle" x:Key="selectionStyle">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Stroke" Value="Blue"/>
            <Setter Property="StrokeThickness" Value="3"/>
            <Setter Property="Panel.ZIndex" Value="999"/>
            <Setter Property="Visibility" Value= "Collapsed"/>
        </Style>
    </Window.Resources>


    <StackPanel Orientation="Vertical">
        <Menu IsMainMenu="False" Height="25">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF6F6F6" Offset="0.25"/>
                    <GradientStop Color="#FFEAE8E8"/>
                    <GradientStop Color="#FFDCD9D9" Offset="0.8"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Nouveau">
                    <MenuItem Header="_Partie 1vs1..." Click="MenuItem_Click"/>
                    <MenuItem Header="_Partie 1vsCOM..." IsEnabled="False"/>
                    <MenuItem Header="_Partie en ligne..." IsEnabled="False"/>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Ouvrir..." />
                <Separator />
                <MenuItem Header="_Sauvegarder" />
                <MenuItem Header="_Sauvegarder sous..." />
                <Separator />
                <MenuItem Header="_Quitter" />
            </MenuItem>
            <MenuItem Header="_Options">
                <MenuItem x:Name="affTileCheckbox" Header="Afficher tiles" IsCheckable="True" IsChecked="True" Click="affTileCheckbox_Click">
                </MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <StackPanel x:Name="controlGauche" Width="200" Height="550">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFC5C5C5" Offset="0"/>
                        <GradientStop Color="#FF4B4B4B" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
            </StackPanel>
            <ScrollViewer Width="550" Height="550" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="canvasMap" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Rectangle Style="{StaticResource selectionStyle}" Name="selectionRectangle" RadiusX="5" RadiusY="5" />
                </Canvas>
                <!--
                <Grid x:Name="gridMap" VerticalAlignment="Center" HorizontalAlignment="Center">
                </Grid>
                -->
            </ScrollViewer>
            <StackPanel x:Name="controlDroit" Width="200" Height="550">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFC5C5C5" Offset="0"/>
                        <GradientStop Color="#FF4B4B4B" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
