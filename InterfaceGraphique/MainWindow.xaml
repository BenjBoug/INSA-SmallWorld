<Window x:Class="InterfaceGraphique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmallWorld" Loaded="Window_Loaded"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Icon="pack://siteoforigin:,,,/Resources/epee14.png" AllowsTransparency="True" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/interface.png"/>
    </Window.Background>
    <StackPanel Orientation="Vertical" Width="1001" Height="700">
        <StackPanel Height="104" Orientation="Horizontal" Margin="0" VerticalAlignment="Bottom" Width="83" HorizontalAlignment="Right">
            <Button Content="-" Width="30" Height="20" Margin="0,0,5,10" Click="Button_Click_2" VerticalAlignment="Bottom"/>
            <Button Content="X" Width="30" Height="20" Click="Button_Click_1" VerticalAlignment="Bottom" Margin="0,0,0,10" HorizontalAlignment="Right">
            </Button>
        </StackPanel>
        <Menu IsMainMenu="False" Height="22" Background="{x:Null}" BorderThickness="0" Margin="0,0,10,0" Width="950">
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Nouveau">
                    <MenuItem Header="_Partie local..." Click="MenuItem_Click"/>
                    <MenuItem Header="_Partie en ligne..." IsEnabled="False"/>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Ouvrir..." Click="MenuItem_Click_2" />
                <Separator />
                <MenuItem Header="_Sauvegarder" Click="MenuItem_Click_1" />
                <MenuItem Header="_Sauvegarder sous..." Click="MenuItem_Click_3" />
                <Separator />
                <MenuItem Header="_Quitter" />
            </MenuItem>
            <MenuItem Header="_Options">
                <MenuItem x:Name="affTileCheckbox" Header="Afficher tiles" Click="affTileCheckbox_Click">
                    <MenuItem x:Name="default" Header="Style par défaut" Click="default_Click"/>
                    <MenuItem x:Name="groovy" Header="Style Groovy" Click="groovy_Click"/>
                    <MenuItem x:Name="tropical" Header="Style Tropical" Click="tropical_Click"/>
                    <MenuItem x:Name="campaign" Header="Style Campagne" Click="campaign_Click"/>
                    <MenuItem x:Name="noStyle" Header="Pas de style" Click="noStyle_Click"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <StackPanel x:Name="controlGauche" Width="214" Height="550" Margin="10,0,0,0">
                <Label x:Name="labelJoueurActuel" Content="C'est à ... de jouer !"/>
                <Label x:Name="labelNbTour" Content="Tour : x/xx"/>
                <StackPanel x:Name="panelListeJoueur"/>
                <Button x:Name="boutonFinir" Content="Finir Tour !" Click="Button_Click" Width="100" Height="50"/>
            </StackPanel>
            <ScrollViewer Width="550" Height="550" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="canvasMap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </ScrollViewer>
            <StackPanel x:Name="controlDroit" Width="214" Height="550" Margin="5,0,10,0"/>
        </StackPanel>
    </StackPanel>
</Window>
