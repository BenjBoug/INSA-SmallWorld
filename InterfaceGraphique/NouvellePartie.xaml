<Window x:Class="InterfaceGraphique.NouvellePartie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NouvellePartie" Height="289" Width="264" Background="#FFF7F7F7">
    <Grid>
        <StackPanel>

            <GroupBox Header="Nouvelle partie" Height="Auto" Width="Auto" Grid.ColumnSpan="2" Margin="5" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Grid.IsSharedSizeScope="False">
                <Grid Height="Auto" Width="Auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Content="Type de Carte:" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Width="86"/>
                    <ComboBox Grid.Row="0" Grid.Column="1">
                        <ComboBoxItem Content="Démo" IsSelected="True"/>
                        <ComboBoxItem Content="Petite"/>
                        <ComboBoxItem Content="Normale"/>
                    </ComboBox>

                    <GroupBox Header="Joueur 1" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="69"/>
                                <ColumnDefinition Width="153"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Nom:" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0" Width="39"/>
                            <TextBox  Grid.Row="0" Grid.Column="1"/>
                            <Label Content="Couleur:" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" Width="39"/>
                            <ComboBox Grid.Row="1" Grid.Column="1">
                                <ComboBoxItem Content="Bleu" IsSelected="True"/>
                                <ComboBoxItem Content="Rouge"/>
                                <ComboBoxItem Content="Vert"/>
                            </ComboBox>
                            <Label Content="Peuple:" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0" Width="39"/>
                            <ComboBox Grid.Row="2" Grid.Column="1">
                                <ComboBoxItem Content="Gaulois" IsSelected="True"/>
                                <ComboBoxItem Content="Nain"/>
                                <ComboBoxItem Content="Viking"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>


                    <GroupBox Header="Joueur 2" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="69"/>
                                <ColumnDefinition Width="153"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Nom:" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0" Width="39"/>
                            <TextBox  Grid.Row="0" Grid.Column="1"/>
                            <Label Content="Couleur:" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" Width="39"/>
                            <ComboBox Grid.Row="1" Grid.Column="1">
                                <ComboBoxItem Content="Bleu" IsSelected="True"/>
                                <ComboBoxItem Content="Rouge"/>
                                <ComboBoxItem Content="Vert"/>
                            </ComboBox>
                            <Label Content="Peuple:" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0" Width="39"/>
                            <ComboBox Grid.Row="2" Grid.Column="1">
                                <ComboBoxItem Content="Gaulois" IsSelected="True"/>
                                <ComboBoxItem Content="Nain"/>
                                <ComboBoxItem Content="Viking"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
