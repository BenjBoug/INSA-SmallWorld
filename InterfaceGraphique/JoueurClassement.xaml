<UserControl x:Class="InterfaceGraphique.JoueurClassement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Grid Width="100">
                <Image Name="img" Height="100" Width="100" Source="pack://siteoforigin:,,,/Resources/Trophy-gold.png" Grid.Column="1" Grid.Row="1"/>
            </Grid>
            
            <TextBlock Name="nom" TextWrapping="Wrap" Text="TextBlock" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Name="nbPoint" TextWrapping="Wrap" Text="TextBlock" Margin="20,0" VerticalAlignment="Center"/>
        </StackPanel>

    </Grid>
</UserControl>
