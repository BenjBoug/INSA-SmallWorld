<UserControl x:Class="InterfaceGraphique.GroupeJoueur"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <GroupBox Header="GroupBox" x:Name="grpJoueur" Margin="5">
            <StackPanel>
                <TextBlock x:Name="couleur" TextWrapping="Wrap" Text="Couleur : "/>
                <TextBlock x:Name="peuple" TextWrapping="Wrap" Text="Peuple : "/>
                <TextBlock x:Name="nbpoints" TextWrapping="Wrap" Text="Points : "/>
                <TextBlock x:Name="nbUnites"  TextWrapping="Wrap" Text="Unités réstantes :"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</UserControl>
