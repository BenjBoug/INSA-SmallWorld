<Window x:Class="InterfaceGraphique.EditeurCarte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editeur de cartes" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <Menu>
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Nouvelle carte" Click="MenuItem_Click"/>
                <Separator />
                <MenuItem Header="_Ouvrir ..." Click="MenuItem_Click_1"/>
                <Separator />
                <MenuItem Header="_Enregistrer" Click="MenuItem_Click_2"/>
                <MenuItem Header="_Enregistrer sous ..." Click="MenuItem_Click_3"/>
                <Separator />
                <MenuItem Header="_Quitter" Click="MenuItem_Click_4"/>
            </MenuItem>
            <MenuItem Header="_Options">
                <MenuItem x:Name="affTileCheckbox" Header="Afficher tiles" >
                    <MenuItem x:Name="default" Header="Style par défaut" Click="default_Click"/>
                    <MenuItem x:Name="groovy" Header="Style Groovy" Click="groovy_Click"/>
                    <MenuItem x:Name="tropical" Header="Style Tropical" Click="tropical_Click"/>
                    <MenuItem x:Name="campaign" Header="Style Campagne" Click="campaign_Click"/>
                    <MenuItem x:Name="noStyle" Header="Pas de style" Click="noStyle_Click"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <StackPanel x:Name="controles" Orientation="Vertical">
                <GroupBox Header="Paramètres de la carte" Height="Auto" Width="Auto" Margin="5" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Grid.IsSharedSizeScope="False">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Label Content="Largeur :" MinWidth="170" HorizontalContentAlignment="right"/>
                            <ComboBox x:Name="comboLargeur" MinWidth="100"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Label Content="Hauteur :" MinWidth="170" HorizontalContentAlignment="right"/>
                            <ComboBox x:Name="comboHauteur" MinWidth="100"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Label Content="Nombre de Tours :" MinWidth="170" HorizontalContentAlignment="right"/>
                            <ComboBox x:Name="comboTours" MinWidth="100"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Label Content="Nombre d'unités classiques :" MinWidth="170" HorizontalContentAlignment="right"/>
                            <ComboBox x:Name="comboUC" MinWidth="100"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Label Content="Nombre d'unités élites :" MinWidth="170" HorizontalContentAlignment="right"/>
                            <ComboBox x:Name="comboUE" MinWidth="100"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Label Content="Nombre d'unités blindées :" MinWidth="170" HorizontalContentAlignment="right"/>
                            <ComboBox x:Name="comboUB" MinWidth="100"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <ScrollViewer Width="550" Height="550" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="canvasMap" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</Window>
