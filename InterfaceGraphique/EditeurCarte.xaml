        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editeur de cartes" Height="300" Width="300">
    <StackPanel Orientation="Vertical">
        <Menu>
            <MenuItem Header="_Fichier">
                <MenuItem Header="_Nouvelle carte" Click="MenuItem_Click"/>
                <Separator />
                <MenuItem Header="_Ouvrir ..." Click="MenuItem_Click_1"/>
                <Separator />
                <MenuItem Header="_Enregistrer" Click="MenuItem_Click_2"/>
                <MenuItem Header="_Enregistrer sous ..." Click="MenuItem_Click_3"/>
                <Separator />
                <MenuItem Header="_Quitter" />
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
